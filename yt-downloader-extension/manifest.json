{
  "manifest_version": 3,
  "name": "YT & Bili Downloader Ultimate",
  "version": "9.8.0",
  "description": "Tải Video YouTube 4K/8K & Bilibili - Side Panel",
  "permissions": ["activeTab", "scripting", "storage", "sidePanel"],
  "host_permissions": [
    "*://*.youtube.com/*", 
    "*://*.youtu.be/*",
    "*://*.bilibili.com/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_title": "Mở Panel",
    "default_icon": { "16": "icon.png", "48": "icon.png", "128": "icon.png" }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": { "16": "icon.png", "48": "icon.png", "128": "icon.png" }
}